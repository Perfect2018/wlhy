/* pages/comment/comment.wxss */
.container{
  padding: 20rpx;
  /* display: flex; */
  align-items: center
}
.rate{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 40rpx;
  box-sizing: border-box;
   display: flex;
  justify-content: flex-start
}
.rate>view{
  color: #666;
  margin-left: 10rpx;
}
.comment{
  margin-top: 50rpx;
  width: 100%;
  display: flex;
  justify-content: center
}
.comment>textarea{
  width: 100%;
}
.commit{
  width: 686rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 50rpx;
  background: #15af7d;
  color: #fefefe;
  font-size: 36rpx;
  text-align: center;
  margin-top: 30rpx;
}
.content{
  background: #fefefe;
  border-radius: 20rpx;
  padding: 20rpx
}