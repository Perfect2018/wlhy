.container{
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-wrap: wrap;
}
.login_icon>image{
  width: 234rpx;
  height: 68rpx;
}
.form{
  width: 100%;
  height: 50%;
  display: flex;
  justify-content: center;
  align-items: center
}
.username,.pwd{
  width: 600rpx;
  height: 100rpx;
  border: 2rpx solid #15af7d;
  margin-bottom: 60rpx;
  border-radius: 50rpx;
  box-sizing: border-box;
  padding-left: 78rpx;
  display: flex;
  justify-content: space-around;
  align-items: center
}
.username>image,.pwd>image{
  width: 32rpx;
  height: 50rpx;
}
.username>input,.pwd>input{
  width: 400rpx;
  /* text-align: center; */
}
.input{
  padding-left: 20rpx;
}
.select{
  padding-left: 100rpx;
  display: flex;
  align-items: center
}
.select>image{
  width: 26rpx;
  height: 26rpx;
}
.select>text{
  font-size: 28rpx;
  color: #666;
  margin-left: 20rpx;
}
button{
  width: 600rpx;
  height: 100rpx;
  background: #15af7d;
  color: #fff;
  border-radius: 50rpx;
  margin-top: 50rpx;
  box-sizing: border-box
}
view>text{
  font-size: 24rpx;
  color: #555;
}