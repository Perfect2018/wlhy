/* 验证失败 */
view.container view.mask{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
  background: rgba(0,0,0,0.4);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap
}
view.container view.mask .fail{
  width: 566rpx;
  height: 369rpx;
  border-radius: 20rpx;
  background: #ffffff;
  position: relative
}
view.container .mask .close{
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  right: 4rpx;
  top: 28rpx
}
view.container view.fail image{
  width: 68rpx;
  height: 68rpx;
  margin-right: 20rpx;
}
view.fail>view{
  width: 340rpx;
  height: 260rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  position: absolute;
  left: 113rpx;
  top: 57rpx;
}
view.fail view view{
  width: 100%;
  text-align: center
}
view.fail view text{
  font-size: 40rpx;
  color: #000000
}
view.container view.fail button{
  width: 313rpx;
  height: 80rpx;
  background: #ffffff;
  border: 2rpx solid #15af7d;
  border-radius: 40rpx;
  color: #15af7d;
  font-size: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center
}
