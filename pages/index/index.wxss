.container{
  background: #efefef;
  display: flex;
  justify-content: center;
  height: 100%;
}

.login{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap
}
.logo{
  width: 100%;
  height: 50%;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;

}
.logo>text{
  font-size: 34rpx;
  color: #282828
}
.usermotto {
  display: flex;
  justify-content: center;
  /* margin-top: 100px; */
  font-size: 24rpx;
  color: #555555;
  letter-spacing: 2rpx;
}

.btn{
  width: 273px;
  height: 50px;
  background: #15af7d;
  border-radius: 25px;
  font-size: 18px;
  letter-spacing: 2px;
  color: #fefefe;
}

.sum{
  width: 343px;
  height: 162px;
  border-radius: 10px;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  margin-top: 15px;
}

.sum-top{
  width: 303px;
  display: flex;
  justify-content: space-around;
}

.com{
  font-size: 20sp;
  color: #111111;
  letter-spacing: 2px;
}

.money{
  font-size: 20sp;
  font-weight: bold;
  color: #15af7d;
}